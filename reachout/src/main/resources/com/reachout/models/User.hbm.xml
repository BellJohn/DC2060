<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
	package="com.reachout.models">

	<class name="User" table="USERS">
		<id name="id" column="USERS_ID">
			<generator class="increment" />
		</id>
		<property name="firstName" type="string" column="USERS_FIRSTNAME" />
		<property name="lastName" type="string" column="USERS_LASTNAME" />
		<property name="username" type="string" column="USERS_USERNAME" />
		<property name="email" type="string" column="USERS_EMAIL" />
		<property name="dob" type="string" column="USERS_DOB" />
	</class>

</hibernate-mapping>
