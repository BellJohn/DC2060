<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.reachout.models">

	<class name="Group" table="ALL_GROUPS">
		<id name="id" column="G_ID">
			<generator class="increment" />
		</id>
		<property name="name" type="string" column="G_NAME" />
		<property name="description" type="string" column="G_DESC" />
		<property name="locationId" type="int" column="G_LOC_ID" />
		<property name="city" type="string" column="G_CITY" />
		<property name="county" type="string" column="G_COUNTY" />
		<property name="picture" type="string" column="G_PICTURE" />

	</class>

</hibernate-mapping>
